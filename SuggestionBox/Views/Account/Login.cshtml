@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {

                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="User Name" name="UserName" autofocus="" required="required">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="Password" value="" type="password" required="required">
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input type="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                            @Html.ActionLink("Cancel", "Index", "Suggestion", null, new{ @Class="btn btn-lg btn-danger btn-block" })
                        </fieldset>
                    }
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.Msg))
            {
                <div class="alert alert-danger">Error : @ViewBag.Msg</div>
            }
        </div>
    </div>
</div>
